+static void apf9328_lcd_power(int on)
+{
+    printk("apf9328_lcd_power: %d\n", on);
+    /* use Port_D CONTRAST pin to control LCD power down mode */
+    if(on)
+        DR(3) &= 0xFFFFF7FF;    
+    else
+        DR(3) |= 0x00000800;
+}
+
+static struct imxfb_mach_info apf9328_fb_info __initdata = {
+    .pixclock   = 62500,    
+    .bpp        = 16,
+    .xres       = 240,      
