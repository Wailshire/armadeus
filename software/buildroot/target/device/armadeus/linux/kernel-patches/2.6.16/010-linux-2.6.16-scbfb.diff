+    .left_margin    = 9,       
+    .upper_margin   = 2,
+    .right_margin   = 27,        
+    .lower_margin   = 4,
+
+    .pcr        = PCR_TFT | PCR_COLOR | PCR_PBSIZ_8 | PCR_BPIX_16 | PCR_CLKPOL |
+                  PCR_SCLKIDLE | PCR_SCLK_SEL | PCR_PCD(2),
+
+    .lcd_power = apf9328_lcd_power,
+};
