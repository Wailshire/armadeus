comment "Armadeus project Specific Device Support"
	depends BR2_arm

config BR2_TARGET_ARMADEUS
	bool "Board support for the Armadeus development boards"
	depends BR2_arm
	default n
	help
	  Armadeus arm based systems


choice
	prompt "Armadeus target device"
	default BR2_TARGET_ARMADEUS_APF9328
	depends on BR2_TARGET_ARMADEUS
	help
	  Armadeus target device 

config BR2_TARGET_ARMADEUS_APF9328
	bool "apf9328"
config BR2_TARGET_ARMADEUS_APM9328
	bool "apm9328"
endchoice


config BR2_TARGET_ARMADEUS_NAME
	string
	default "apm9328"	if BR2_TARGET_ARMADEUS_APM9328
	default "apf9328"	if BR2_TARGET_ARMADEUS_APF9328

choice
	prompt "Target SDRAM size"
	default BR2_TARGET_ARMADEUS_SDRAM_32
	depends on BR2_TARGET_ARMADEUS_APF9328 || BR2_TARGET_ARMADEUS_APM9328
	help
	  Target SDRAM size 

config BR2_TARGET_ARMADEUS_SDRAM_8
	bool "8MB"
config BR2_TARGET_ARMADEUS_SDRAM_16
	bool "16MB"
config BR2_TARGET_ARMADEUS_SDRAM_32
	bool "32MB"
config BR2_TARGET_ARMADEUS_SDRAM_64
	bool "64MB"
endchoice

config BR2_TARGET_ARMADEUS_SDRAM_SIZE
	string
	default "8"		if BR2_TARGET_ARMADEUS_SDRAM_8
	default "16"		if BR2_TARGET_ARMADEUS_SDRAM_16
	default "32"		if BR2_TARGET_ARMADEUS_SDRAM_32
	default "64"		if BR2_TARGET_ARMADEUS_SDRAM_64


comment "Package support"
	depends BR2_TARGET_ARMADEUS

config BR2_PACKAGE_LINUX
	bool "linux"
	default n
	depends BR2_TARGET_ARMADEUS
	select BR2_TARGET_U-BOOT
	help
	    The Linux kernel.
	    http://www.kernel.org/

config BR2_TARGET_U-BOOT
	bool "U-Boot"
	default n
	depends BR2_TARGET_ARMADEUS
	help
	  The U-Boot universal bootloader for embedded systems.



