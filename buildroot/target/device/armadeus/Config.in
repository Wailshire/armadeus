menuconfig BR2_TARGET_ARMADEUS
	bool "Armadeus Device Support"
	depends on BR2_arm
	default n
	help
	  Armadeus arm based systems

if BR2_TARGET_ARMADEUS

choice
	prompt "Armadeus target device"
	default BR2_TARGET_ARMADEUS_APF9328
	depends on BR2_arm && BR2_TARGET_ARMADEUS
	help
	  Armadeus target device 

config BR2_TARGET_ARMADEUS_APF9328
	bool "apf9328"
config BR2_TARGET_ARMADEUS_APM9328
	bool "apm9328"
endchoice


config BR2_TARGET_ARMADEUS_NAME
	string
	default "apm9328"	if BR2_TARGET_ARMADEUS_APM9328
	default "apf9328"	if BR2_TARGET_ARMADEUS_APF9328

choice
	prompt "Target SDRAM size"
	default BR2_TARGET_ARMADEUS_SDRAM_32
	depends on BR2_TARGET_ARMADEUS_APF9328 || BR2_TARGET_ARMADEUS_APM9328
	help
	  Target SDRAM size 

config BR2_TARGET_ARMADEUS_SDRAM_8
	bool "8MB"
config BR2_TARGET_ARMADEUS_SDRAM_16
	bool "16MB"
config BR2_TARGET_ARMADEUS_SDRAM_32
	bool "32MB"
config BR2_TARGET_ARMADEUS_SDRAM_64
	bool "64MB"
endchoice

config BR2_TARGET_ARMADEUS_SDRAM_SIZE
	string
	default "8"		if BR2_TARGET_ARMADEUS_SDRAM_8
	default "16"		if BR2_TARGET_ARMADEUS_SDRAM_16
	default "32"		if BR2_TARGET_ARMADEUS_SDRAM_32
	default "64"		if BR2_TARGET_ARMADEUS_SDRAM_64


config BR2_PACKAGE_LINUX_ARM
	bool "linux"
	default n
	depends BR2_arm && BR2_TARGET_ARMADEUS
	select BR2_TARGET_U-BOOT
	help
	    The Linux kernel.
	    http://www.kernel.org/
choice
	prompt "Linux kernel version"
	default BR2_PACKAGE_LINUX_VERSION_2_6_12
	depends on BR2_PACKAGE_LINUX_ARM
	help
	    Linux kernel version you want to use with your Armadeus board.
	    If you plan to use MMC/SD cards then choose 2.6.18.1, otherwise 2.6.12
	    should be sufficient and is more used/tested.

config BR2_PACKAGE_LINUX_VERSION_2_6_12
	bool "2.6.12"
config BR2_PACKAGE_LINUX_VERSION_2_6_17
	bool "2.6.17"
config BR2_PACKAGE_LINUX_VERSION_2_6_18_1
	bool "2.6.18.1"
config BR2_PACKAGE_LINUX_VERSION_2_6_23_1
        bool "2.6.23.1"
endchoice

config BR2_PACKAGE_LINUX_VERSION
	string
	default "2.6.12"	if BR2_PACKAGE_LINUX_VERSION_2_6_12
	default "2.6.17"	if BR2_PACKAGE_LINUX_VERSION_2_6_17
	default "2.6.18.1"	if BR2_PACKAGE_LINUX_VERSION_2_6_18_1
        default "2.6.23.1"      if BR2_PACKAGE_LINUX_VERSION_2_6_23_1

config BR2_TARGET_U-BOOT
	bool "U-Boot"
	default n
	depends BR2_arm && BR2_TARGET_ARMADEUS
	help
	  The U-Boot universal bootloader for embedded systems.

endif

