+        .start  = (PWM_BASE_ADDR),
+        .end    = (PWM_BASE_ADDR + 0x14),
+        .flags  = IORESOURCE_MEM,
+    },
+    [1] = {
+        .start  = (MXC_INT_PWM),
+        .end    = (MXC_INT_PWM),
+        .flags  = IORESOURCE_IRQ, 
+    },
+};
