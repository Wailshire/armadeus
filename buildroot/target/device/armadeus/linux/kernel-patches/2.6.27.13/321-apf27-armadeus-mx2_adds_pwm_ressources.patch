+struct platform_device mxc_pwm_device0 = {
+    .name           = "imx-pwm",
+    .id             = 0,
+    .num_resources  = ARRAY_SIZE(mxc_pwm_resources),
+    .resource       = mxc_pwm_resources,
+};
 
